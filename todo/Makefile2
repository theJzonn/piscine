NAME =		libft.a

SRCS =		srcs/ft_putchar.c srcs/ft_putstr.c srcs/ft_swap.c srcs/ft_strlen.c srcs/ft_strcmp.c

OBJS =		${SRCS:.c=.o}

AR	 =		ar rc

CC =		gcc

RM =		rm -f

CFLAGS =	-Wall -Wextra -Werror

.c.o:
			${CC} ${CFLAGS} -I includes -c $< -o ${<:.c=.o}

${NAME}:	${OBJS}
			${AR} ${NAME} ${OBJS}

clean:
			${RM} ${OBJS}

fclean:		clean
			${RM} ${NAME}

re:			fclean all

all:		${NAME}

.PHONY:		all clean fclean re .c.o
