NAME =		libft.a

SRCS =		srcs/ft_putchar.c srcs/ft_putstr.c srcs/ft_swap.c srcs/ft_strlen.c srcs/ft_strcmp.c

OBJS =		${SRCS:.c=.o}

AR =		ar rc

CC =		gcc

RM =		rm -f

CFLAGS =	-Wall -Wextra -Werror


all: ${NAME}

.c.o:
			${CC} ${CFLAGS} -Iincludes -c $< -o ${<:.c=.o}

${NAME}: ${OBJS}
			${AR} ${NAME} ${OBJS}

clean:
			${RM} ${OBJS}

fclean: clean
			${RM} ${NAME}

re: fclean all

.PHONY:		all clean fclean re
